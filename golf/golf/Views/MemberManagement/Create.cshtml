@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
                Detta är medlemshanteringen.
            </p>
        </div>
    </section>
}
@model golf.Models.Person

@{
    ViewBag.Title = "Create";
}

<h2>Lägg till medlem</h2>
<br>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Person</legend>

        <div class="editor-label">
            @Html.Label("Förnamn")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.firstName)
            @Html.ValidationMessageFor(model => model.firstName)
        </div>

        <div class="editor-label">
            @Html.Label("Efternamn")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.lastName)
            @Html.ValidationMessageFor(model => model.lastName)
        </div>

        <div class="editor-label">
            @Html.Label("Gatuadress")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.streetAddres)
            @Html.ValidationMessageFor(model => model.streetAddres)
        </div>

        <div class="editor-label">
            @Html.Label("Postnummer")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.postalCode)
            @Html.ValidationMessageFor(model => model.postalCode)
        </div>

        <div class="editor-label">
            @Html.Label("Stad")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.city)
            @Html.ValidationMessageFor(model => model.city)
        </div>

        <div class="editor-label">
            @Html.Label("E-post")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.email)
            @Html.ValidationMessageFor(model => model.email)
        </div>
        <p>
            <input type="submit" value="Lägg till medlem" />
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
