@model IEnumerable<golf.Models.Person>

<table>
    <tr>
        <th>
            @Html.Label("Förnamn")
        </th>
        <th>
            @Html.Label("Efternamn")
        </th>
        <th>
            @Html.Label("Adress")
        </th>
        <th>
            @Html.Label("Postnummer")
        </th>
        <th>
            @Html.Label("Ort")
        </th>
        <th>
            @Html.Label("E-post")
        </th>
        <th>
            @Html.Label("Betalat")
        </th>

        <th></th>
    </tr>


 @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.streetAddres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.postalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>

            <td>
                @if (item.Payed == true)
                {
                    <p>Ja</p>
                }
                else
                {
                    <p>Nej</p>
                }
                @*@Html.DisplayTextFor(modelItem => item.Payed)*@
            </td>
 
            <td>

                <div class="buttonGreen">
                    @Html.ActionLink("Ändra", "Edit", new { id = item.Id })
                </div>
                
                <div class="buttonGreen">
                    @Html.ActionLink("Visa", "Details", new { id = item.Id })
                    </div>

                <div class="buttonGreen">
                    @Html.ActionLink("Radera", "Delete", new { id = item.Id })
                    </div>

</td>
        </tr>
    }

</table>