@model IEnumerable<golf.Models.Person>

@{
    ViewBag.Title = "Mina personuppgifter";
}

<h2>Mina personuppgifter</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<div class="MyPageLoggedIn">
    <table>
        <tr>
            <th id="myPageth">
                @Html.Label("Förnamn")
            </th>
            <th>
                @Html.Label("Efternamn")
            </th>
            <th>
                @Html.Label("Adress")
            </th>
            <th>
                @Html.Label("Postnummer")
            </th>
            <th>
                @Html.Label("Stad")
            </th>
            <th>
                @Html.Label("E-postadress")
            </th>
            <th>
                @Html.Label("Kön")
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.memberType_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PW)
                </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.firstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.streetAddres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.postalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.city)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gender_ID)
                    @* Fixa så if gender==1 visa man *@
                </td>
                <td>
                    @Html.ActionLink("Ändra", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id })
                    @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                </td>
            </tr>
        }

    </table>
</div>
